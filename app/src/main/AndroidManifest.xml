<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ds.timetracker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/MyTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.timer.TaskDetailActivity" />
        <activity
            android:name=".ui.edit.EditItemActivity"
            android:theme="@style/MyTheme" />
        <activity android:name=".ui.create.CreateItemActivity" />
        <activity android:name=".ui.create.CreateReportActivity" />
        <activity android:name=".ui.create.CreateTaskActivity" />
        <activity android:name=".ui.create.CreateProjectActivity" />
        <activity android:name=".ui.reports.ReportDetailActivity" />
        <activity android:name=".ui.edit.EditTaskActivity"></activity>
    </application>

</manifest>